ADMIN RESOURCE:
 @Put('/updateOwner')
  async updateAddressOwner(@Body() addressId: number, newOwner: number, @CurrentUser('role') userRole: JwtPayload) {
    const response = await this.addressService.updateOwner(addressId, newOwner, userRole);
    return new AddressResponse(response);
  }

